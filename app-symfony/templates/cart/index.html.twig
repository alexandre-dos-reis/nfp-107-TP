{% extends 'base.html.twig' %}

{% block body %}

	{# {% include "cart/nav.html.twig" %} #}
	<h2 class="text-center mb-4">Cart</h2>

	{% if cartItems | length > 0 %}
		<ul class="list-group">
			{% for ci in cartItems %}
				{% include "cart/_cartItem.html.twig" with { ci: ci } %}
			{% endfor %}
			<li class="list-group-item d-flex justify-content-between align-items-center">
				<h4>Total (EUR)</h4>
				<div class="d-flex justify-content-between align-items-center">
					<h4>{{ total | amount }}</h4>
					<span>&nbsp;&nbsp;</span>
					<form class="mb-2" action="{{ path('payment_checkout') }}">
						<button class="btn btn-primary">Go to Checkout</button>
					</form>
				</div>
			</li>
		</ul>
	{% else %}
		<h4 class="mt-4 text-center">Your cart is empty ! Go to
			<a href="{{ path('products_index') }}">products page</a>.</h4>
	{% endif %}
{% endblock %}
